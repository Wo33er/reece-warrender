h1.banner-text {
  font: 600 1.5em/1 'Raleway', sans-serif;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  text-transform: uppercase;
  letter-spacing: .5em;

  span, span:after {
    font-weight: 900;
    color: #FFFFFF;
    white-space: nowrap;
    display: inline-block;
    position: relative;
    letter-spacing: .1em;
    padding: .2em 0 .3em 0;
  }
  span {
    z-index: 90;
    text-shadow: .04em .04em 0 #353535;
  }
  span:after {
    content: attr(data-shadow-text);
    color: rgba(255, 255, 255, 0.35);
    text-shadow: none;
    position: absolute;
    left: .0875em;
    top: .0875em;
    z-index: -1;
    -webkit-mask-image: url(/images/banner/mask.png);
  }
  a {
    font-weight: 700;
    color: #ffffff;
    position: relative;
    text-decoration: none;

    &:hover{
      opacity: 0.8;
    }
    &:active {
      top: 1px;
    }
  }
}

@media screen and (max-width: $desktopMaxBreakpoint) {
  h1.banner-text {
    font-size: 1.6vw;
  }
  h1.banner-text span {
    font-size: 6vw;
  }
}
@media screen and (min-width: $desktopMaxBreakpoint) {
  h1.banner-text {
    font-size: 26px;
  }
  h1.banner-text span {
    font-size: 96px;
  }
}