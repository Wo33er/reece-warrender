#completions {
    display: flex;
    flex-wrap: wrap;
}
.completion-game {
    border: 1px solid white;
    height: 300px;
    overflow: hidden;
    flex: 1 0 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-position: 50%;
    background-size: cover;
    background-repeat: no-repeat;

    &:hover {
        border: 1px solid black;
    }
    &.completion-game.lazy {
        background-image: none !important;
        background-color: #F1F1FA;
    }
}
.completion-title-card {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: black;
    color: white;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: .5em;
    height: 100%;
    background-image: url('/images/bg3.png');

    .completion-title-year {
        font: 600 1.5em/1 'Raleway', sans-serif;
        color: rgba(255, 255, 255, 0.5);

        span, span:after {
            font-weight: 900;
            color: #FFFFFF;
            white-space: nowrap;
            display: inline-block;
            position: relative;
            letter-spacing: .1em;
            padding: .2em 0 .3em 0;
        }
        span {
            z-index: 90;
            text-shadow: .04em .04em 0 #353535;
        }
        span:after {
            content: attr(data-shadow-text);
            color: rgba(255, 255, 255, 0.35);
            text-shadow: none;
            position: absolute;
            left: .0875em;
            top: .0875em;
            z-index: -1;
            -webkit-mask-image: url(/images/banner/mask.png);
        }
    }
}

// TEMP FOR GAMING PAGE
@media screen and (min-width: 1800px) {
    .completion-game {
        min-width: 350px;
    }
}
@media screen and (max-width: 1799px) {
    .completion-game {
        min-width: calc(25% -  1em);
    }
    .completion-game:nth-child(4n+1) {
        min-width: calc(50% - 1em);
    }
}
@media screen and (max-width: 1400px) {
    .completion-game {
        min-width: calc(33% -  1em);
    }
    .completion-game:nth-child(4n+1) {
        min-width: calc(66% - 1em);
    }
}
@media screen and (max-width: 900px) {
    .completion-game {
        min-width: calc(50% -  1em);
    }
    .completion-game:nth-child(4n+1) {
        min-width: calc(100% - 1em);
    }
}
