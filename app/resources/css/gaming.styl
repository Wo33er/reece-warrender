.completion-game-title {
    display: flex;
    justify-content: flex-end;
    margin: 10px 10px 0 10px;
}
.completion-game-title > div {
    font-weight: bold;
    text-align: right;
    text-transform: uppercase;
    padding: 10px 10px 0 0;
    color: white;
    border: 2px solid;
    background: #1d1d1d;
    mix-blend-mode: normal;
    padding: 5px;
    line-height: normal;
    display: inline-block;
}

.completion-game-details {
    opacity: 0;
}
.completion-game:hover {
    .completion-game-details {
        opacity: 100;
        background-color: #ffffffcc;
        padding: 10px;
    }
}

.completion-game-header {
    display: flex;
    justify-content: space-between;
    font-weight: bold;
}
.completion-game-header-duration {
    display: flex;

    &:after{
        display: block;
        content: "hrs";
        font-style: italic;
    }
}
.completion-game-review {
    line-height: 15px;
}
.completion-game-review-rating {
    display: inline;
    font-weight: bold;
    background-image: url('/images/icons/star.png');
    height: 10px;
    display: inline-block;
    background-size: contain;

    &.completion-game-review-stars-5 {
        width: 50px;
    }
    &.completion-game-review-stars-4 {
        width: 40px;
    }
    &.completion-game-review-stars-3 {
        width: 30px;
    }
    &.completion-game-review-stars-2 {
        width: 20px;
    }
    &.completion-game-review-stars-1 {
        width: 10px;
    }
}