.top-games-frame {
  height: 250px;
  overflow: hidden;
  width: 80vw;
  margin: 0 auto;

  ul {
    transform: translateZ(0px) translateX(0px);
    width: 1000px;
    list-style: none;
    margin: 0;
    padding: 0;
    height: 100%;
  }
  li {
    float: left;
    width: 225px;
    height: 100%;
    margin: 0 1px 0 0;
    padding: 0;
    background: #333;
    color: #ddd;
    cursor: pointer;
  }
}

.top-game-background {
  position: relative;
  width: 100%;
  height: 224px;
  overflow: hidden;

  & > div:first-of-type {
    height: 100%;
    width: 100%;
    background-size: cover;
    background-position: 50%;
    transform-origin: right bottom;
    overflow: hidden;
  }
  &:hover .top-game-review {
    display: block;
  }
}
.top-game-review {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 1em;
  line-height: 120%;
  font-style: italic;
  color: white;
  padding: 10px;
  box-sizing: border-box;
  display: none;
  cursor: pointer;
  background-color: rgba(0, 0, 0, 0.7);
}

.top-game-details {
    height: 26px;
    width: 100%;
    display: flex;
    background: black;
    color: #fff;
    border-top: 1px solid white;

  &> div:last-of-type {
    display: flex;
    font-weight: bold;
    height: 100%;
    flex: 1 0;
  }
}
.top-game-count {
  display: flex;
  flex: 0 0 auto;
  font-size: 1em;
  font-weight: bold;
  height: 100%;
  padding-left: 5px;

  &:before {
    content: "#";
    display: block;
    color: #a5a5a5;
  }
}
.top-game-name {
  font-size: 1em;
  font-weight: bold;
  height: 100%;
  flex: 1 0;
  padding-left: 5px;
}
.top-game-platform {
  font-size: 0.8em;
  font-style: italic;
  flex: 0 0 auto;
  height: 100%;
  text-align: right;
  padding-right: 5px;
}

.top-games-arrows {
  height: 25px;
  width: 100%;
  display: flex;
  margin: 10px 0 0 0;
  justify-content: center;

  &:before {
    content: '\2190';
  }
  &:after {
    content: '\2192';
  }
  &:before,
  &:after {
    font-size: 3em;
    font-weight: bold;
    margin: 0 30px;
  }
}








