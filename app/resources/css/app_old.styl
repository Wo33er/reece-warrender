$masterBg = #222b38;
$masterFont = #6b6b6b;

* {
  box-sizing: border-box;
}

html,
body {
  margin: 0 auto;
  font-size: 12px;
  font-weight: 500;
  font-family: 'Roboto', sans-serif;
  word-spacing: 1px;
  line-height: 26px;
  text-transform: none;
  letter-spacing: 0;
  -webkit-tap-highlight-color: transparent;
  -webkit-font-smoothing: antialiased;
  width: 100%;
}

#navbar {
  overflow: hidden;
  background: #ffffff00;
  padding: 10px 10px;
  transition: 0.4s;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 99;
  display: flex;
  justify-content: space-between;
}
#navbar ul {
  display: flex;
  list-style:none;
  padding: 0;
  margin: 0;
}
#navbar li {    
  color: white;
  font-size: 12px;
  font-weight: bold;
  padding: 4px 8px;
  border-radius: 3px;

  &:not(:last-of-type) {
    margin-right: 15px;
  }
  &:hover,
  &.active {
    cursor: pointer;
    background-color: #ffffff30;
    transition: 0.4s;
  }
  &.home,
  &.twitter,
  &.github {
    background-size: 20px 20px;
    background-position: center;
    background-repeat: no-repeat;
    width: 34px;
    height: 34px;
    padding: 0;
  }
  &.home {
    background-image: url('/images/nav/home.png')
  }
  &.twitter {
    background-image: url('/images/nav/twitter.png')
  }
  &.github {
    background-image: url('/images/nav/github.png')
  }
  a {
    display: block;
    height: 100%;
    width: 100%;
    color: white;
    text-decoration: none;
  }
}
@media screen and (max-width: 580px) {
  #navbar {
    padding: 20px 10px !important; /* Use !important to make sure that JavaScript doesn't override the padding on small screens */
  }
}

footer {
  padding: 1% 5%;
  text-align:center;
  background-color: $masterBg;
  color: $masterFont;
  position: fixed;
  bottom: 0;
  width: 100%;

  a {
    color: #ffffff;
    font-weight: 500;
    text-decoration: none;

    &:hover{
      opacity: 0.8;
    }

    &:active {
      top: 1px;
    }
  }
}

section {
  width: 100%;
  padding: 7%;
  display: table;
  margin: 0;
  max-width: none;
}
section.intro {
  height: 100vh;
  background: rgba(55, 70, 85, 0.85);
  background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/reece-warrender.jpg)
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-position: center center;
  display: flex;
  justify-content: center;
  align-items: center;
}
section.banner {
  height: 350px;
  background: rgba(55, 70, 85, 0.85);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-position: center center;
  display: flex;
  justify-content: center;
  align-items: center;

  &.portfolio {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/reece-warrender.jpg)
  }
  &.gaming {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/reece-warrender.jpg)
  }
  
}
h1.banner-text {
  font: 600 1.5em/1 'Raleway', sans-serif;
  font-size: 1.6vw;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  text-transform: uppercase;
  letter-spacing: .5em;

  span, span:after {
    font-weight: 900;
    color: #FFFFFF;
    white-space: nowrap;
    display: inline-block;
    position: relative;
    letter-spacing: .1em;
    padding: .2em 0 .3em 0;
  }
  span {
    font-size: 6vw;
    z-index: 90;
    text-shadow: .04em .04em 0 #353535;
  }
  span:after {
    content: attr(data-shadow-text);
    color: rgba(255, 255, 255, 0.35);
    text-shadow: none;
    position: absolute;
    left: .0875em;
    top: .0875em;
    z-index: -1;
    -webkit-mask-image: url(/images/banner/mask.png);
  }
  a {
    font-weight: 700;
    color: #ffffff;
    position: relative;
    text-decoration: none;

    &:hover{
      opacity: 0.8;
    }
    &:active {
      top: 1px;
    }
  }
}






























