@import "config"

* {
  box-sizing: border-box;
}

html {
  overflow-y: scroll;
}

html,
body {
  margin: 0 auto;
  font-size: 12px;
  font-weight: 500;
  font-family: 'Roboto', sans-serif;
  word-spacing: 1px;
  line-height: 26px;
  text-transform: none;
  letter-spacing: 0;
  -webkit-tap-highlight-color: transparent;
  -webkit-font-smoothing: antialiased;
  width: 100%;
  background-color: #ececec;
}

#header-pad {
  padding-top: 20px;
}
#body-container {
  background-color: #ececec;
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 20px 0;
}
#navbar-container {
  overflow: hidden;
  background: #ffffff00;
  padding: 40px 20px 5px;
  transition: 0.4s;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 99;
  transition: background 0.4s ease,
  padding 0.0s linear
}
@media screen and (max-width: $mobileBreakpoint - 1) {
  #header-pad {
    display: none;
  }
  #body-container {
    padding: 0px !important;
  }
  #navbar-container {
    padding: 40px 20px 5px;
  }
  #navbar {
    padding: 0 !important;
  }
}

#navbar {
  max-width: 1060px;
  margin: 0 auto;
  padding: 0 20px 0;
  display: flex;
  justify-content: space-between;
  transition: background 0.4s ease,
              padding 0.0s linear,
              height 0.0s linear
}
#navbar ul {
  display: flex;
  list-style:none;
  padding: 0;
  margin: 0;
}
#navbar li {    
  color: white;
  font-size: 12px;
  font-weight: bold;
  border-radius: 3px;

  &:not(:last-of-type) {
    margin-right: 15px;
  }
  &:hover,
  &.active {
    cursor: pointer;
    background-color: #ffffff30;
    transition: 0.4s;
  }
  &#home,
  &.twitter,
  &.github {
    background-size: 20px 20px;
    background-position: center;
    background-repeat: no-repeat;
    width: 34px;
    height: 34px;
    padding: 0;
  }
  &#home {
    background-image: url('/images/nav/home.png')
  }
  &.twitter {
    background-image: url('/images/nav/twitter.png')
  }
  &.github {
    background-image: url('/images/nav/github.png')
  }
  a {
    display: block;
    height: 100%;
    width: 100%;
    color: white;
    text-decoration: none;
    padding: 4px 8px;
  }
}

footer {
  padding: 1% 5%;
  text-align:center;
  background-color: $masterBg;
  color: $masterFont;
  position: fixed;
  bottom: 0;
  width: 100%;

  a {
    color: #ffffff;
    font-weight: 500;
    text-decoration: none;

    &:hover{
      opacity: 0.8;
    }

    &:active {
      top: 1px;
    }
  }
}

section {
  width: 100%;
}
section.intro {
  height: 100vh;
  background: rgba(55, 70, 85, 0.85);
  background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/reece-warrender.jpg)
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-position: center center;
  display: flex;
  justify-content: center;
  align-items: center;
}
section.banner {
  height: 350px;
  background: rgba(55, 70, 85, 0.85);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: auto;
  background-position: center top;
  display: flex;
  justify-content: center;
  align-items: center;

  &.portfolio {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/portfolio.jpg)
  }
  &.gaming {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/gaming.jpg)
  }
  
}
@media screen and (min-width: 1900px) {
  section.banner {
    background-size: contain;
  }
}
h1.banner-text {
  font: 600 1.5em/1 'Raleway', sans-serif;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  text-transform: uppercase;
  letter-spacing: .5em;

  span, span:after {
    font-weight: 900;
    color: #FFFFFF;
    white-space: nowrap;
    display: inline-block;
    position: relative;
    letter-spacing: .1em;
    padding: .2em 0 .3em 0;
  }
  span {
    z-index: 90;
    text-shadow: .04em .04em 0 #353535;
  }
  span:after {
    content: attr(data-shadow-text);
    color: rgba(255, 255, 255, 0.35);
    text-shadow: none;
    position: absolute;
    left: .0875em;
    top: .0875em;
    z-index: -1;
    -webkit-mask-image: url(/images/banner/mask.png);
  }
  a {
    font-weight: 700;
    color: #ffffff;
    position: relative;
    text-decoration: none;

    &:hover{
      opacity: 0.8;
    }
    &:active {
      top: 1px;
    }
  }
}

@media screen and (max-width: $desktopMaxBreakpoint) {
  h1.banner-text {
    font-size: 1.6vw;
  }
  h1.banner-text span {
    font-size: 6vw;
  }
}
@media screen and (min-width: $desktopMaxBreakpoint) {
  h1.banner-text {
    font-size: 26px;
  }
  h1.banner-text span {
    font-size: 96px;
  }
}