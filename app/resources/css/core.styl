* {
  box-sizing: border-box;
}
html {
  overflow-y: scroll;
}
html,
body {
  margin: 0 auto;
  font-size: 12px;
  font-weight: 500;
  font-family: 'Roboto', sans-serif;
  word-spacing: 1px;
  line-height: 26px;
  text-transform: none;
  letter-spacing: 0;
  -webkit-tap-highlight-color: transparent;
  -webkit-font-smoothing: antialiased;
  width: 100%;
  background-color: #ececec;
  background-image: url('/images/bg1.png');
}

#header-pad {
  padding-top: 55px;
}

#navbar-container {
  overflow: hidden;
  background: #ffffff00;
  padding: 10px 20px 10px;
  transition: 0.4s;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 99;
  transition: background 0.4s ease,
  padding 0.0s linear
}
body.nav-white,
#navbar-container.nav-white {
  #navbar li {
    & > a {
      color: white;
    }
  }
  #navbar li {
    &#home,
    &.twitter,
    &.github {
      filter: invert(1);
    }
  }
}
#navbar {
  max-width: 1060px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  transition: background 0.4s ease,
              padding 0.0s linear,
              height 0.0s linear
}
#navbar ul {
  display: flex;
  list-style:none;
  padding: 0;
  margin: 0;
}
#navbar li {    
  color: black;
  font-size: 12px;
  font-weight: bold;
  border-radius: 3px;

  &:not(:last-of-type) {
    margin-right: 15px;
  }
  &:hover,
  &.active {
    cursor: pointer;
    background-color: #7d7d7d4d;
    transition: 0.4s;
  }
  &#home,
  &.twitter,
  &.github {
    background-size: 20px 20px;
    background-position: center;
    background-repeat: no-repeat;
    width: 34px;
    height: 34px;
    padding: 0;
  }
  &#home {
    background-image: url('/images/nav/home.png')
  }
  &.twitter {
    background-image: url('/images/nav/twitter.png')
  }
  &.github {
    background-image: url('/images/nav/github.png')
  }
  a {
    display: block;
    height: 100%;
    width: 100%;
    color: black;
    text-decoration: none;
    padding: 4px 8px;
  }
}

#body-container {
  //max-width: 1100px;
  margin: 0 auto;
  padding: 0 20px 0;
}
@media screen and (max-width: $mobileBreakpoint - 1) {
  #body-container {
    padding: 0px !important;
  }
}

section {
  width: 100%;
}
section.intro {
  height: 100vh;
  background: rgba(55, 70, 85, 0.85);
  background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/reece-warrender.jpg)
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-position: center center;
  display: flex;
  justify-content: center;
  align-items: center;
}
section.banner {
  height: 350px;
  background: rgba(55, 70, 85, 0.85);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: auto;
  background-position: center top;
  display: flex;
  justify-content: center;
  align-items: center;

  &.portfolio {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/portfolio.jpg)
  }
  &.gaming {
    background-image: linear-gradient(to bottom right, rgba(8,12,19,0.7), rgba(55, 70, 85, 0.85)), url(/images/banner/gaming.jpg)
  }
}
@media screen and (min-width: 1900px) {
  section.banner {
    background-size: contain;
  }
}

.content-section {
  max-width: 1200px;
  margin: auto;
}
.content-main {
  width: 100%;
}
.content-side {
  background-color: #f7f7f7;
  padding: 20px;
  margin-bottom: 20px;
  flex: 0 0 300px;
  display: flex;
  justify-content: space-between;
}
@media screen and (max-width: $mobileBreakpoint - 1) {
  .content-section {
    flex-wrap: wrap;
  }
  .content-side {
    background-color: #f7f7f7;
    padding: 20px;
    flex: 0 0 100%;
    flex-direction: column;
  }
  .sidebar-section:not(:last-of-type) {
    margin-bottom: 40px;
  }
}
.content-header {
  background-color: #000;
  font-weight: bold;
  color: white;
  text-transform: uppercase;
  display: flex;
  justify-content: center;
}